                           showon="template:grid"
                           type="textarea"
                           rows="2"
                           label="MOD_NXDFM2_PEOPLE_CUSTOM_CARD_CLASSNAMES_LABEL"
                           description="MOD_NXDFM2_PEOPLE_CUSTOM_CARD_CLASSNAMES_DESC"
