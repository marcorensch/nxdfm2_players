                        <option value="left">MOD_NXDFM2_PEOPLE_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PEOPLE_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PEOPLE_OPT_RIGHT_LABEL</option>
                    </field>
