    <namespace path="src">NXD\Module\FootballManagerPlayers</namespace>
    <version>2.0.0</version>
    <description><![CDATA[MOD_NXDFM2_PLAYERS_XML_DESCRIPTION]]></description>

    <files>
        <folder module="mod_nxdfm2_players">services</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>src</folder>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_nxdfm2_players.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_nxdfm2_players.sys.ini</language>
    </languages>

    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="nxdfm2_players">
            https://update.nx-designs.ch/joomla/modules/mod_nxdfm2_players.xml
        </server>
    </updateservers>

    <config>
        <fields name="params">
            <fieldset name="basic"
                      addfieldprefix="NXD\Component\Footballmanager\Administrator\Field"
            >
                <field name="team_id"
                       type="Teams"
                       label="MOD_NXDFM2_PLAYERS_TEAM_FILTER_LABEL"
                       description="MOD_NXDFM2_PLAYERS_TEAM_FILTER_DESC"
                       layout="joomla.form.field.list-fancy-select"
                       default=""
                       required="true"
                       filter="integer"
                >
                    <option value="">MOD_NXDFM2_PLAYERS_OPT_SELECT_TEAM</option>
                </field>
                <field name="only_current_team_positions"
                       type="radio"
                       label="MOD_NXDFM2_PLAYERS_POSITIONS_ONLY_CURRENT_TEAM_LABEL"
                       description="MOD_NXDFM2_PLAYERS_POSITIONS_ONLY_CURRENT_TEAM_DESC"
                       default="0"
                       filter="integer"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="only_active_positions"
                       type="radio"
                       label="MOD_NXDFM2_PLAYERS_ACTIVE_POSITIONS_ONLY_LABEL"
                       description="MOD_NXDFM2_PLAYERS_ACTIVE_POSITIONS_ONLY_DESC"
                       default="1"
                       filter="integer"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="fallback_image" type="media" label="MOD_NXDFM2_PLAYERS_FALLBACK_IMG_LABEL"
                       description="MOD_NXDFM2_PLAYERS_FALLBACK_IMG_DES"/>
            </fieldset>
            <fieldset name="nxdfm2_players_display" class="flexbox">

                <fieldset name="layout">
                    <field name="load_uikit"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_LOAD_UIKIT_LABEL"
                           description="MOD_NXDFM2_PLAYERS_LOAD_UIKIT_DESC"
                           default="1"
                           filter="integer"
                           class="btn-group btn-group-yesno">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                    </field>
                    <field name="template"
                           type="list"
                           label="MOD_NXDFM2_PLAYERS_TEMPLATE_LABEL"
                           description="MOD_NXDFM2_PLAYERS_TEMPLATE_DESC"
                           default="grid"
                    >
                        <option value="grid">MOD_NXDFM2_PLAYERS_TEMPLATE_OPTION_GRID</option>
                    </field>
                </fieldset>
                <fieldset name="columns" class="col-lg-6">

                    <field name="grid_columns"
                           showon="template:grid"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_DESC"
                           default="1"
                           filter="integer"
                           class="btn-group"
                    >
                        <option value="1">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_1</option>
                        <option value="2">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_2</option>
                        <option value="3">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_3</option>
                        <option value="4">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_4</option>
                        <option value="5">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_5</option>
                        <option value="6">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_6</option>
                    </field>
                    <field name="grid_columns_s"
                           showon="template:grid"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_S_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_S_DESC"
                           default="2"
                           filter="integer"
                           class="btn-group"
                    >
                        <option value="1">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_1</option>
                        <option value="2">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_2</option>
                        <option value="3">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_3</option>
                        <option value="4">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_4</option>
                        <option value="5">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_5</option>
                        <option value="6">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_6</option>
                    </field>

                    <field name="grid_columns_m"
                           showon="template:grid"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_M_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_M_DESC"
                           default="4"
                           filter="integer"
                           class="btn-group"
                    >
                        <option value="1">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_1</option>
                        <option value="2">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_2</option>
                        <option value="3">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_3</option>
                        <option value="4">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_4</option>
                        <option value="5">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_5</option>
                        <option value="6">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_6</option>
                    </field>
                    <field name="grid_columns_l"
                           showon="template:grid"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_L_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_L_DESC"
                           default="5"
                           filter="integer"
                           class="btn-group"
                    >
                        <option value="1">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_1</option>
                        <option value="2">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_2</option>
                        <option value="3">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_3</option>
                        <option value="4">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_4</option>
                        <option value="5">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_5</option>
                        <option value="6">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_6</option>
                    </field>
                    <field name="grid_columns_xl"
                           showon="template:grid"
                           type="radio"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_XL_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_XL_DESC"
                           default="6"
                           filter="integer"
                           class="btn-group"
                    >
                        <option value="1">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_1</option>
                        <option value="2">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_2</option>
                        <option value="3">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_3</option>
                        <option value="4">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_4</option>
                        <option value="5">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_5</option>
                        <option value="6">MOD_NXDFM2_PLAYERS_COLUMNS_OPTION_6</option>
                    </field>

                </fieldset>

                <fieldset name="gaps">
                    <field name="grid_column_gap"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_COLUMNS_GAP_LABEL"
                           description="MOD_NXDFM2_PLAYERS_COLUMNS_GAP_DESC"
                           type="radio"
                           default="small"
                           class="btn-group">
                        <option value="collapse">MOD_NXDFM2_PLAYERS_OPT_COLLAPSE_LABEL</option>
                        <option value="small">MOD_NXDFM2_PLAYERS_OPT_SMALL_LABEL</option>
                        <option value="medium">MOD_NXDFM2_PLAYERS_OPT_MEDIUM_LABEL</option>
                        <option value="large">MOD_NXDFM2_PLAYERS_OPT_LARGE_LABEL</option>
                    </field>

                    <field name="grid_row_gap"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_ROWS_GAP_LABEL"
                           description="MOD_NXDFM2_PLAYERS_ROWS_GAP_DESC"
                           type="radio"
                           default="small"
                           class="btn-group">
                        <option value="collapse">MOD_NXDFM2_PLAYERS_OPT_COLLAPSE_LABEL</option>
                        <option value="small">MOD_NXDFM2_PLAYERS_OPT_SMALL_LABEL</option>
                        <option value="medium">MOD_NXDFM2_PLAYERS_OPT_MEDIUM_LABEL</option>
                        <option value="large">MOD_NXDFM2_PLAYERS_OPT_LARGE_LABEL</option>
                    </field>

                </fieldset>
                <fieldset name="alignment">

                    <field name="grid_alignment"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_DESC"
                           type="radio"
                           default="center"
                           class="btn-group">
                        <option value="left">MOD_NXDFM2_PLAYERS_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PLAYERS_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PLAYERS_OPT_RIGHT_LABEL</option>
                    </field>

                    <field name="grid_alignment_s"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_S_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_S_DESC"
                           type="radio"
                           default="center"
                           class="btn-group">
                        <option value="left">MOD_NXDFM2_PLAYERS_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PLAYERS_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PLAYERS_OPT_RIGHT_LABEL</option>
                    </field>

                    <field name="grid_alignment_m"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_M_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_M_DESC"
                           type="radio"
                           default="center"
                           class="btn-group">
                        <option value="left">MOD_NXDFM2_PLAYERS_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PLAYERS_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PLAYERS_OPT_RIGHT_LABEL</option>
                    </field>

                    <field name="grid_alignment_l"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_L_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_L_DESC"
                           type="radio"
                           default="center"
                           class="btn-group">
                        <option value="left">MOD_NXDFM2_PLAYERS_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PLAYERS_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PLAYERS_OPT_RIGHT_LABEL</option>
                    </field>

                    <field name="grid_alignment_xl"
                           showon="template:grid"
                           label="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_XL_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GRID_ALIGNMENT_XL_DESC"
                           type="radio"
                           default="center"
                           class="btn-group">
                        <option value="left">MOD_NXDFM2_PLAYERS_OPT_LEFT_LABEL</option>
                        <option value="center">MOD_NXDFM2_PLAYERS_OPT_CENTER_LABEL</option>
                        <option value="right">MOD_NXDFM2_PLAYERS_OPT_RIGHT_LABEL</option>
                    </field>
                </fieldset>

                <fieldset name="item_options">
                    <field name="show_modal"
                           label="MOD_NXDFM2_PLAYERS_ENABLE_DETAILS_LABEL"
                           description="MOD_NXDFM2_PLAYERS_ENABLE_DETAILS_DESC"
                           type="radio"
                           class="btn-group btn-group-yesno"
                           default="1">
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                    </field>
                    <field name="modal_breakpoint"
                           type="radio"
                           class="btn-group"
                           label="MOD_NXDFM2_PLAYERS_MODAL_BREAKPOINT_LABEL"
                           description="MOD_NXDFM2_PLAYERS_MODAL_BREAKPOINT_DESC"
                           default="m"
                    >
                        <option value="s">MOD_NXDFM2_PLAYERS_OPTION_PHONE_90</option>
                        <option value="m">MOD_NXDFM2_PLAYERS_OPTION_TABLET</option>
                        <option value="l">MOD_NXDFM2_PLAYERS_OPTION_LAPTOP</option>
                        <option value="xl">MOD_NXDFM2_PLAYERS_OPTION_DESKTOP</option>
                    </field>
                    <field name="date_format"
                           type="radio"
                           class="btn-group"
                           label="MOD_NXDFM_DATE_FORMAT_LABEL"
                           description="MOD_NXDFM_DATE_FORMAT_DESC"
                           default="DATE_FORMAT_LC4"
                    >
                        <option value="DATE_FORMAT_LC4">DATE_FORMAT_LC4</option>
                        <option value="DATE_FORMAT_LC3">DATE_FORMAT_LC3</option>
                        <option value="DATE_FORMAT_JS1">DATE_FORMAT_JS1</option>
                        <option value="MOD_NXDFM_DATE_FORMAT_YEAR">MOD_NXDFM_DATE_FORMAT_YEAR</option>
                    </field>
                    <field name="group_fields"
                           type="customfieldgroups"
                           layout="joomla.form.field.list-fancy-select"
                           label="MOD_NXDFM2_PLAYERS_GROUPED_CUSTOMFIELDS_LABEL"
                           description="MOD_NXDFM2_PLAYERS_GROUPED_CUSTOMFIELDS_DESC"
                           multiple="true"
                    />
                </fieldset>

                <fieldset name="custom_css">
                    <field name="custom_card_classnames"
                           showon="template:grid"
                           type="textarea"
                           rows="2"
                           label="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_CLASSNAMES_LABEL"
                           description="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_CLASSNAMES_DESC"
                           default=""
                    />
                    <field name="custom_card_content_classnames"
                           showon="template:grid"
                           type="textarea"
                           rows="2"
                           label="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_CONTENT_CLASSNAMES_LABEL"
                           description="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_CONTENT_CLASSNAMES_DESC"
                           default=""
                    />
                    <field name="custom_card_title_classnames"
                           showon="template:grid"
                           type="textarea"
                           rows="2"
                           label="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_TITLE_CLASSNAMES_LABEL"
                           description="MOD_NXDFM2_PLAYERS_CUSTOM_CARD_TITLE_CLASSNAMES_DESC"
                           default=""
                    />
                    <field name="modal_container_classnames"
                           type="textarea"
                           rows="2"
                           label="MOD_NXDFM2_PLAYERS_MODAL_CONTAINER_CLASSNAMES_LABEL"
                           description="MOD_NXDFM2_PLAYERS_MODAL_CONTAINER_CLASSNAMES_DESC"
                           default=""
                    />
                </fieldset>

            </fieldset>
            <fieldset name="advanced">
                <field name="debug" label="MOD_NXDFM2_PLAYERS_DEBUG_LABEL" default="0" type="radio"
                       class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="moduleclass_container_sfx"
                       type="textarea"
                       rows="3"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field name="custom_backend_css" type="CustomModuleCode"
                       addfieldprefix="NXD\Module\FootballManagerPlayers\Site\Field"/>
            </fieldset>
        </fields>
    </config>
</extension>
